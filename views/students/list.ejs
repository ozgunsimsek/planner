<%- contentFor('body') %>

<style>
    .student-card {
        transition: all 0.3s ease;
    }
    
    .student-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-people me-2"></i>
        Öğrenci Listesi
    </h2>
    <a href="/students/new" class="btn btn-primary">
        <i class="bi bi-person-plus me-2"></i>
        Yeni Öğrenci Ekle
    </a>
</div>

<div class="row">
    <% if (students.length === 0) { %>
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Henüz öğrenci eklenmemiş.
            </div>
        </div>
    <% } else { %>
        <% students.forEach(student => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <a href="/students/<%= student.id %>" class="text-decoration-none">
                    <div class="card h-100 student-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="profile-icon">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-1"><%= student.name %></h5>
                                    <p class="card-text text-muted mb-0"><%= student.grade %></p>
                                </div>
                            </div>
                            <p class="card-text">
                                <i class="bi bi-envelope me-2"></i>
                                <%= student.email %>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% }); %>
    <% } %>
</div> 